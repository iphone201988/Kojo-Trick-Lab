<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.example.newbase_2025.ui.auth.AuthCommonVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth.forgot.ForgotEmailFragment">


        <include
            android:id="@+id/clCommon"
            layout="@layout/common_header"
            app:vm="@{vm}"
            />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMail"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:src="@drawable/mail"
            android:layout_marginTop="@dimen/_24sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clCommon" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHave"
            style="@style/TextView_600_SemiBold_Quicksand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:elegantTextHeight="true"
            app:layout_constraintTop_toBottomOf="@+id/ivMail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:text="@string/enter_your_email_associated_with_kojos_account"
            android:textColor="@color/blue"
            android:textSize="@dimen/_11ssp"
            />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etEmail"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/et_bg"
            android:imeOptions="actionDone"
            android:gravity="start"
            android:hint="@string/enter_email"
            android:onClick="@{v->vm.onClick(v)}"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/_15sdp"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHave" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnVerify"
            style="@style/TextView_600_SemiBold_Quicksand"
            android:layout_width="0dp"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/et_bg"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="@{v->vm.onClick(v)}"
            android:hint="@string/continues"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toEndOf="@+id/etEmail"
            app:layout_constraintStart_toStartOf="@+id/etEmail"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>