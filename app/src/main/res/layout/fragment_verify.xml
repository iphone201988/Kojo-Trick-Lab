<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.tech.kojo.ui.auth.AuthCommonVM" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth.verify.VerifyFragment">

        <include
            android:id="@+id/clCommon"
            layout="@layout/common_header"
            app:vm="@{vm}"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMail"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:src="@drawable/mail"
            android:layout_marginTop="@dimen/_24sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clCommon" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHave"
            style="@style/TextView_600_SemiBold_Quicksand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:elegantTextHeight="true"
            app:layout_constraintTop_toBottomOf="@+id/ivMail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:text="@string/we_have_send_code_to_your_email_address"
            android:textColor="@color/blue"
            android:textSize="@dimen/_11ssp"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtOtp1"
            style="@style/TextView_500_Medium"
            android:layout_width="68dp"
            android:layout_height="46dp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/et_bg"
            android:gravity="center"
            android:hint="-"
            android:inputType="number"
            android:maxLength="1"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/edtOtp2"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHave"
            app:layout_constraintEnd_toStartOf="@+id/edtOtp2" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtOtp2"
            style="@style/TextView_500_Medium"
            android:layout_width="68dp"
            android:layout_height="46dp"
            android:background="@drawable/et_bg"
            android:hint="-"
            android:gravity="center"
            android:inputType="number"
            android:layout_marginStart="@dimen/_12sdp"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/edtOtp3"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:maxLength="1"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toEndOf="@+id/edtOtp1"
            app:layout_constraintEnd_toStartOf="@+id/edtOtp3"
            app:layout_constraintTop_toTopOf="@+id/edtOtp1" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtOtp3"
            style="@style/TextView_500_Medium"
            android:layout_width="68dp"
            android:layout_height="46dp"
            android:background="@drawable/et_bg"
            android:gravity="center"
            android:hint="-"
            android:inputType="number"
            android:layout_marginStart="@dimen/_12sdp"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/edtOtp4"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:maxLength="1"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toEndOf="@+id/edtOtp2"
            app:layout_constraintEnd_toStartOf="@+id/edtOtp4"
            app:layout_constraintTop_toTopOf="@+id/edtOtp1" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtOtp4"
            style="@style/TextView_500_Medium"
            android:layout_width="68dp"
            android:layout_height="46dp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@drawable/et_bg"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:hint="-"
            android:maxLength="1"
            android:imeOptions="actionDone"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toEndOf="@+id/edtOtp3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/edtOtp1" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnVerify"
            style="@style/TextView_600_SemiBold_Quicksand"
            android:layout_width="0dp"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/et_bg"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="@{v->vm.onClick(v)}"
            android:text="@string/verify"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toEndOf="@+id/edtOtp4"
            app:layout_constraintStart_toStartOf="@+id/edtOtp1"
            app:layout_constraintTop_toBottomOf="@+id/edtOtp4" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvResendCode"
            style="@style/TextView_600_SemiBold_Quicksand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:elegantTextHeight="true"
            android:paddingVertical="@dimen/_6sdp"
            app:layout_constraintTop_toBottomOf="@+id/btnVerify"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_18sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:text="@string/resend_code_in_23s"
            android:textColor="@color/blue"
            android:textSize="@dimen/_11ssp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>