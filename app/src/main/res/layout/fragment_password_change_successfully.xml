<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.tech.kojo.ui.auth.AuthCommonVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash"
        tools:context=".ui.auth.forgot.PasswordChangeSuccessfullyFragment">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivHidePassword"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_65sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:src="@drawable/logo_icon"
            android:layout_marginBottom="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="@+id/tvChange"
            app:layout_constraintBottom_toTopOf="@+id/tvChange"
            app:layout_constraintEnd_toEndOf="@+id/tvChange"
          />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvChange"
            style="@style/TextView_700_Bold_Quicksand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="@{v->vm.onClick(v)}"
            android:text="@string/your_account_npassword_changed_nsuccessfully"
            android:textColor="@color/blue"
            android:textSize="@dimen/_22ssp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnLogin"
            style="@style/TextView_600_SemiBold_Quicksand"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:background="@drawable/et_bg"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:onClick="@{v->vm.onClick(v)}"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>