<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.tech.kojo.ui.dashboard.home.final_progress.FinalProgressFragmentVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.home.final_progress.FinalProgressFragment">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <FrameLayout
            android:id="@+id/flSubscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="@+id/viewpager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.zhpan.indicator.IndicatorView
                android:id="@+id/dotsIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:vpi_slider_checked_color="@color/blue"
                app:vpi_slider_normal_color="@color/colorPrimary" />



            <View
                android:id="@+id/staticDot"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_gravity="center"
                android:background="@drawable/dot_background" />
        </FrameLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSkip"
            style="@style/TextView_700_Bold_Quicksand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:paddingHorizontal="@dimen/_12sdp"
            android:paddingVertical="@dimen/_4sdp"
            android:text="Dive Roll"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/viewpager" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivProgress"
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:scaleType="centerCrop"
            android:padding="@dimen/_10sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/close_icon"
            android:tint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/tvSkip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvSkip"
            />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMAx"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:scaleType="centerCrop"
            android:src="@drawable/maximize"
            app:layout_constraintBottom_toBottomOf="@+id/flSubscription"
            app:layout_constraintEnd_toEndOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDive"
            style="@style/TextView_600_SemiBold_Quicksand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:paddingEnd="@dimen/_18sdp"
            android:text="Dive Prep"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewpager" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvKeyPoints"
            style="@style/TextView_600_SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:text="Key Points:"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDive" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:clipToPadding="false"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/tvKeyPoints"
            tools:itemCount="5"
            tools:listitem="@layout/step_rv_item" />




        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/blue_20"
            app:layout_constraintTop_toBottomOf="@+id/rvStep" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAddReps"
            style="@style/TextView_600_SemiBold_Quicksand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:paddingEnd="@dimen/_18sdp"
            android:text="Add Reps:"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivMinus"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:scaleType="centerCrop"
            android:src="@drawable/minus"
            app:layout_constraintStart_toStartOf="@+id/tvAddReps"
            app:layout_constraintTop_toBottomOf="@+id/tvAddReps" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPlus"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="@dimen/_33sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:scaleType="centerCrop"
            android:src="@drawable/plus"
            app:layout_constraintEnd_toEndOf="@+id/tvAddReps"
            app:layout_constraintTop_toBottomOf="@+id/tvAddReps" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etCount"
            style="@style/TextView_500_Medium"
            android:layout_width="0dp"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:background="@drawable/et_bg"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:text="0"
            android:textColor="@color/blue"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintBottom_toBottomOf="@+id/ivMinus"
            app:layout_constraintEnd_toStartOf="@+id/ivPlus"
            app:layout_constraintStart_toEndOf="@+id/ivMinus"
            app:layout_constraintTop_toTopOf="@+id/ivMinus" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnAttempted"
            style="@style/TextView_600_SemiBold_Quicksand"
            android:layout_width="0dp"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_22ssp"
            android:background="@drawable/bg_gradiant"
            android:gravity="center"
            android:onClick="@{v->vm.onClick(v)}"
            android:text="Attempted"
            android:textColor="@color/blue"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnCompleted"
            app:layout_constraintStart_toStartOf="@+id/ivMinus" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnCompleted"
            style="@style/TextView_600_SemiBold_Quicksand"
            android:layout_width="0dp"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:background="@drawable/btn_bg"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:onClick="@{v->vm.onClick(v)}"
            android:text="Completed"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toBottomOf="@+id/btnAttempted"
            app:layout_constraintEnd_toEndOf="@+id/ivPlus"
            app:layout_constraintStart_toEndOf="@+id/btnAttempted"
            app:layout_constraintTop_toTopOf="@+id/btnAttempted" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>